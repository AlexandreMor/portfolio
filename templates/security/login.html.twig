{% extends 'base.html.twig' %} {% block title %}- Se connecter{% endblock %} {%
block body %}
<div class="col-3 mt-5 height100">
  <h1 class="mb-5 pb-5 border-bottom border-light">Connexion</h1>
  <form method="post">
    {% if error %}
    <div class="alert alert-danger">
      {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
    {% endif %} {% if app.user %}
    <div class="mb-3">
      Vous êtes connecté en tant que {{ app.user.username }},
      <a href="{{ path('app_logout') }}">Logout</a>
    </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">S'il vous plait connectez-vous</h1>
    <label for="inputEmail">Email</label>
    <input
      type="email"
      value="{{ last_username }}"
      name="email"
      id="inputEmail"
      class="form-control"
      autocomplete="email"
      required
      autofocus
    />
    <label for="inputPassword">Mot de passe</label>
    <input
      type="password"
      name="password"
      id="inputPassword"
      class="form-control"
      autocomplete="current-password"
      required
    />

    <input
      type="hidden"
      name="_csrf_token"
      value="{{ csrf_token('authenticate') }}"
    />
    <div class="checkbox mb-3 mt-3">
      <label>
        <input type="checkbox" name="_remember_me" /> Se souvenir de moi
      </label>
    </div>

    <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
  </form>
  <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
</div>
{% endblock %}
