{% extends 'base.html.twig' %} {% block title %}- Réinitialisation{% endblock %}
{% block body %} {% for flash_error in app.flashes('reset_password_error') %}
<div class="alert alert-danger col-12" role="alert">{{ flash_error }}</div>
{% endfor %}
<div class="col-3 mt-5 height100">
  <h1 class="mb-5">Réinitialisation du mot de passe</h1>
  {{ form_start(requestForm) }}
  {{ form_row(requestForm.email) }}
  <div class="mb-3">
    <small>
      Entrez votre adresse mail pour que nous puissions vous envoyer un lien de
      réinitialisation de votre mot de passe.
    </small>
  </div>

  <button class="btn btn-primary">Envoyer</button>
  {{ form_end(requestForm) }}
</div>
{% endblock %}
