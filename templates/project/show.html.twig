{% extends 'base.html.twig' %} {% block title %}- {{ project.name }}
{% endblock %} {% block body %}
<h1 class="mb-5 pb-5 mt-5 border-bottom border-light">{{ project.name }}</h1>
<div class="mt-5 height100 d-flex align-items-center flex-column">
  <p class="mb-5 w-50">{{ project.description }}</p>
  <p class="mb-5 w-50 fw-bold">Technologies et langages utilis√©s : {% for techno in project.technos %} {{ techno }} {% endfor %}</p>
  <div
    id="carouselExampleControls"
    class="carousel slide col-6"
    data-bs-ride="carousel"
  >
    <div class="carousel-inner">
      {% for image in project.images %}
      <div class="carousel-item">
        <img
          src="{{ vich_uploader_asset(image) }}"
          class="d-block w-100"
          alt="{{ project.name }}"
        />
      </div>
      {% endfor %}
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleControls"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleControls"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
{% endblock %} {% block javascripts %}
{{ parent() }}
<script>
  function itemActive() {
    let item = document.querySelector(".carousel-item:first-child");
      item.classList.add("active");
  }
  itemActive();
</script>
{% endblock %}
