{% extends 'base.html.twig' %} {% block title %}- Mes projets{% endblock %} {%
block body %}

<h1 class="mb-5 mt-5 pb-5 px-0 border-bottom border-light">Mes projets</h1>
<div class="heigt100 mt-5 mb-5">
  <div class="row row-cols-1 row-cols-md-2 g-5">
    {% for project in projects %}
    <div class="col">
      <div class="card h-100">
        <div
          id="carouselExampleControls{{ loop.index }}"
          class="carousel carousel-dark slide"
          data-bs-ride="carousel"
        >
          <div class="carousel-inner">
            {% for image in project.images %}
            <div class="carousel-item">
              <img
                src="{{ vich_uploader_asset(image) }}"
                class="d-block w-100"
                alt="{{ project.name }}"
              />
            </div>
            {% endfor %}
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExampleControls{{ loop.index }}"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExampleControls{{ loop.index }}"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <div class="card-body text-light bg-secondary">
          <h5 class="card-title mt-3">
            <a href="{{ path('project', { slug: project.slug }) }}">{{
              project.name
            }}</a>
          </h5>
          <p class="card-text mt-5">{{ project.description }}</p>
        </div>
        <div class="card-footer text-light bg-dark">
          <small class="text-muted"
            >{% for techno in project.technos %} {{ techno }} {% endfor
            %}</small
          >
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %} {% block javascripts %}
{{ parent() }}
<script>
  function itemActive() {
    let items = document.querySelectorAll(".carousel-item:first-child");
    for (let i = 0; i < items.length; i++) {
      items[i].classList.add("active");
    }
  }
  itemActive();
</script>
{% endblock %}
